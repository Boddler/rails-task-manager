  <div class="holder">
    <h1>My Tasks</h1>
    <ul class="list-unstyled">
      <% @tasks.each do |task| %>
        <li class="mb-2">
          <i class="<%= task.completed? ? 'fa-solid' : 'fa-regular' %> fa-square"></i>
          <%= link_to task.title, task_path(task), class: "btn btn-warning" %>
          <%= link_to "ðŸš®", task_path(task), class: "btn btn-primary", data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
        </li>
      <% end %>
    </ul>
    <%= link_to "Add a new task", new_task_path, class: "btn btn-info" %>
  </div>
</div>
