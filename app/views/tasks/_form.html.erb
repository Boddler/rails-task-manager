<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
  <%= f.label :description %>
  <%= f.text_field :details, class: 'form-control' %>
  <%= f.label :completed if @task.persisted? %>
  <%= f.check_box :completed if @task.persisted? %>
  <%= f.submit class: 'btn btn-primary mt-2' %>
<% end %>
